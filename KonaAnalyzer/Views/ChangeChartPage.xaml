        <xForms:SfChart
                 x:Name="Chart" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <chart:SfChart.Margin>
                <OnPlatform x:TypeArguments="Thickness" WinPhone="0,0,15,0" />
            </chart:SfChart.Margin>
            <chart:SfChart.Title>
                <xForms:ChartTitle Text="{Binding DataType} " />
            </chart:SfChart.Title>

            <chart:SfChart.PrimaryAxis>
                <xForms:DateTimeAxis PlotOffset="6"
                          LabelRotationAngle="-45"
                          ShowMajorGridLines = "false" ShowMinorGridLines ="false">
                    <xForms:DateTimeAxis.LabelStyle>
                        <xForms:ChartAxisLabelStyle LabelFormat="MMM dd" />
                    </xForms:DateTimeAxis.LabelStyle>
                </xForms:DateTimeAxis>
            </chart:SfChart.PrimaryAxis>
            <chart:SfChart.SecondaryAxis>
                <xForms:NumericalAxis Maximum="{Binding Maximum}" Interval="{Binding Interval}" >
                    <chart:NumericalAxis.AxisLineStyle>
                        <chart:ChartLineStyle StrokeWidth="0">
                        </chart:ChartLineStyle>
                    </chart:NumericalAxis.AxisLineStyle>
                    <chart:NumericalAxis.MajorTickStyle>
                        <chart:ChartAxisTickStyle TickSize="0" />
                    </chart:NumericalAxis.MajorTickStyle>
                    <chart:NumericalAxis.LabelStyle>
                        <chart:ChartAxisLabelStyle x:Name="secondaryAxisLabelStyle" />
                    </chart:NumericalAxis.LabelStyle>
                </xForms:NumericalAxis>
            </chart:SfChart.SecondaryAxis>
            <!--  LabelFormat="#.#'%'" -->
            <chart:SfChart.Series>
                <chart:SplineAreaSeries x:Name="Series"  ItemsSource="{Binding Items}" XBindingPath="Date" YBindingPath="Change" StrokeColor="#FF0080DF" StrokeWidth="2">
                    <chart:SplineAreaSeries.DataMarker>
                        <chart:ChartDataMarker MarkerWidth="8" MarkerHeight="8" MarkerColor="White" MarkerBorderColor="#FF0080DF" MarkerBorderWidth="2" ShowMarker="true" ShowLabel="true" >
                            <chart:ChartDataMarker.LabelStyle>
                                <chart:DataMarkerLabelStyle OffsetY="-10" BackgroundColor="#FF0080DF"/>
                            </chart:ChartDataMarker.LabelStyle>
                        </chart:ChartDataMarker>
                    </chart:SplineAreaSeries.DataMarker>
                    <chart:SplineAreaSeries.ColorModel>
                        <chart:ChartColorModel Palette="Custom">
                            <chart:ChartColorModel.CustomGradientColors>
                                <chart:ChartGradientColor StartPoint="0.5,1" EndPoint="0.5,0">
                                    <chart:ChartGradientColor.GradientStops>
                                        <chart:ChartGradientStop Color="White" Offset= "0"/>
                                        <chart:ChartGradientStop Color="#FF0080DF" Offset= "1"/>
                                    </chart:ChartGradientColor.GradientStops>
                                </chart:ChartGradientColor>
                            </chart:ChartColorModel.CustomGradientColors>
                        </chart:ChartColorModel>
                    </chart:SplineAreaSeries.ColorModel>
                </chart:SplineAreaSeries>
            </chart:SfChart.Series>
        </xForms:SfChart>
    </StackLayout>

</ContentPage>
